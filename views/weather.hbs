    </div>

    <!-- body  -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="searchBar mx-auto">
                    <form class="_form">
                        <input type="text" id="inp_city" placeholder="Enter Your City name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="temp_info">
                    <div class="top_section">
                        <p id="day">monday</p>
                        <p id="date">01 jul</p>
                    </div>
                    <div id="main_section">
                        <p id="city_name">Get Output Here <span id="country">in</span></p>
                        <div class="middle_layer">
                            <p id="temp"><span>0</span> <sup>0</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

